@model IEnumerable<Future_Vet.Models.Pet_Visit>

@{
    ViewBag.Title = "Index";
}

<h3 class="View-title" style="font-size: 3vw">Registered Bookings</h3>
<button type="submit" class="Green-button" onclick='window.location = "@Url.Action("Create", "Pet_Visit")";'>Add Booking</button>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.VisitDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.VisitTime)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Summary)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Pet_Details.Pet_Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Vet.Name)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.VisitDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.VisitTime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Summary)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Pet_Details.Pet_Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Vet.Name)
            </td>
            <td>
                @*Edit method commented out due to user requirements*@
                @*<input type="submit" value="Edit" onclick='window.location = "@Url.Action("Edit", "Pet_Visit", new { id = item.IDVisit})";' class="Orange-Small-button" />|*@
                <input type="submit" value="Details" onclick='window.location = "@Url.Action("Details", "Pet_Visit", new { id = item.IDVisit})";' class="Blue-Small-button" />|
                <input type="submit" value="Delete" onclick='window.location = "@Url.Action("Delete", "Pet_Visit", new { id = item.IDVisit})";' class="Red-Small-button" />
            </td>
        </tr>
    }

</table>
