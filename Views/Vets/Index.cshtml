@model IEnumerable<Future_Vet.Models.Vet>

@{
    ViewBag.Title = "Index";
}

    <h3 class="View-title" style="font-size: 3vw">Registered Vetenerians</h3>
    <button type="submit" class="Green-button" onclick='window.location = "@Url.Action("Create", "Vets")";'>Add a new Vetenerian</button>
        <table class="table table-responsive table-bordered table-striped">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Surname)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Id_Number)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.License)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Address)
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Surname)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Id_Number)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.License)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Address)
                    </td>
                    <td>
                        <input type="submit" value="Edit" onclick='window.location = "@Url.Action("Edit", "Vets", new { id = item.IDVet })";' class="Orange-button" />|
                        <input type="submit" value="Details" onclick='window.location = "@Url.Action("Details", "Vets", new { id = item.IDVet })";' class="Blue-button" />|
                        <input type="submit" value="Delete" onclick='window.location = "@Url.Action("Delete", "Vets", new { id = item.IDVet })";' class="Red-button" />
                    </td>
                </tr>
            }

        </table>

